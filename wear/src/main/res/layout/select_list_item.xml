<?xml version="1.0" encoding="utf-8"?>
<com.valiro.remindme.WearableListViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/wearable_list_view_layout"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <android.support.wearable.view.CircledImageView
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:background="@drawable/ic_call_black_48dp"
        android:layout_height="30dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:backgroundTint="@color/blue"
        android:id="@+id/select_list_icon"/>

    <TextView
        android:textSize="16sp"
        android:textScaleX="0.9"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/select_list_label"
        android:text="Call"/>

</com.valiro.remindme.WearableListViewLayout>